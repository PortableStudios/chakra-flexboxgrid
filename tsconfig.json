{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./lib"
  },
  "include": ["./src", "./stories"],
  "exclude": ["node_modules"]
}
